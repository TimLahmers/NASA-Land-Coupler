export LIS_LIBESMF="${def_nlc_libesmf}"
export LIS_MINPACK="${def_nlc_minpack}"
export LIS_CRTM="${def_nlc_crtm}"
export LIS_CRTM_PROF="${def_nlc_crtm_prof}"
export LIS_CMEM="${def_nlc_cmem}"
export LIS_LAPACK="${def_nlc_lapack}"
