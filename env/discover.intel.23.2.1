#!/bin/bash

# check for NASA Land Coupler source directory
if [ -z "${NLC_DIR}" ] ; then
  echo "ERROR: Please set NLC_DIR to root directory of cloned repository."
  exit 1
fi
if [ ! -d "${NLC_DIR}" ]; then
  echo "ERROR: ${NLC_DIR} directory does not exist."
  exit 1
fi

# load modules
source /etc/profile.d/modules.sh
module purge
module load comp/gcc/13.2.0
module load comp/intel/2023.2.1
module load mpi/impi/2021.11
module load tview/2021.4.10
module load git/2.42.0
module load cmake/3.28.2
module list

# define library paths
def_nlc_jpeg="/discover/nobackup/projects/lis/libs/sles-15.4/openjpeg/2.3.0-150000.3.13.1.x86_64/usr"
def_nlc_jasper="/discover/nobackup/projects/lis/libs/jasper/2.0.14_intel-19.1.0.166_sles12.3"
def_nlc_openjpeg="/discover/nobackup/projects/lis/libs/sles-15.4/openjpeg/2.3.0-150000.3.13.1.x86_64/usr"
def_nlc_eccodes="/discover/nobackup/projects/lis/libs/sles-15.4/eccodes/2.32.0_intel-2023.2.1"
def_nlc_netcdf="/discover/nobackup/projects/lis/libs/sles-15.4/netcdf/4.9.2_intel-2023.2.1"
def_nlc_hdf4="/discover/nobackup/projects/lis/libs/sles-15.4/hdf4/4.2.16-2_intel-2023.2.1"
def_nlc_hdfeos="/discover/nobackup/projects/lis/libs/sles-15.4/hdfeos2/3.0_intel-2023.2.1"
def_nlc_hdf5="/discover/nobackup/projects/lis/libs/sles-15.4/hdf5/1.14.2_intel-2023.2.1"
def_nlc_modesmf="/discover/nobackup/projects/lis/libs/sles-15.4/esmf/8.1.1_intel-2023.2.1_impi-2021.11/mod/modO/Linux.intel.64.intelmpi.default"
def_nlc_libesmf="/discover/nobackup/projects/lis/libs/sles-15.4/esmf/8.1.1_intel-2023.2.1_impi-2021.11/lib/libO/Linux.intel.64.intelmpi.default"
def_nlc_minpack="/discover/nobackup/projects/lis/libs/minpack/intel_11_1_038"
def_nlc_crtm="/discover/nobackup/projects/lis/libs/JCSDA_CRTM/REL-2.0.2.Surface-rev_intel_18_0_3_222"
def_nlc_crtm_prof="/discover/nobackup/projects/lis/libs/CRTM_Profile_Utility/intel_18_0_3_222"
def_nlc_cmem="/discover/nobackup/projects/lis/libs/CRTM_Profile_Utility/intel_18_0_3_222"
def_nlc_lapack="/discover/nobackup/projects/lis/libs/lapack/3.6.0_intel_14_0_3_174"
def_lis_petsc="/discover/nobackup/projects/lis/libs/sles-15.4/petsc/3.20.0_intel-2023.2.1_impi-2021.11"
def_lvt_gdal="/discover/nobackup/projects/lis/libs/sles-15.4/gdal/3.7.2_intel-2023.2.1"
def_lvt_fortrangis="/discover/nobackup/projects/lis/libs/sles-15.4/fortrangis/3.0-1_intel-2023.2.1"
def_ldt_libgeotiff="/discover/nobackup/projects/lis/libs/sles-15.4/geotiff/1.7.1_intel-2023.2.1"

# set LIS environment variables
export DEV_ENV="LISF_7_INTEL_23_2_1"
export LIS_SRC="${NLC_DIR}/src/LISF/lis"
export LIS_ARCH="linux_ifc"
export LIS_SPMD="parallel"
export LIS_FC="mpif90"
export LIS_CC="mpicc"
export LIS_JPEG="${def_nlc_jpeg}"
export LIS_OPENJPEG="${def_nlc_openjpeg}"
