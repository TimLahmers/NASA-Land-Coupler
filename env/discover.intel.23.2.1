# set LVT environment variables
export LVT_ARCH="linux_ifc"
export LVT_FC="mpif90"
export LVT_CC="mpicc"
export LVT_JPEG="${def_nlc_jpeg}"
export LVT_OPENJPEG="${def_nlc_openjpeg}"
